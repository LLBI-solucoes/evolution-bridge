{
  "compilerOptions": {
    "target": "ES2020", // Mais moderno
    "module": "ESNext", // Ideal para tree-shaking
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true, // Ajuda em depuração
    "sourceMap": true, // Também para depurar
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}